{
  "name": "@adobe/helix-dispatch",
  "version": "5.0.0",
  "description": "Helix dispatcher service.",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --branches 97 --statements 100 --lines 100 mocha -i -g 'Post-Deploy' && asp --summary",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --branches 97 --statements 100 --lines 100 mocha --reporter xunit --reporter-options output=./junit/test-results.xml -i -g 'Post-Deploy' && codecov && asp --summary",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "build": "wsk-builder -v",
    "asbuild:untouched": "asc fastly/assembly/index.ts --target debug",
    "asbuild:optimized": "asc fastly/assembly/index.ts --target release",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "prepack": "npm run asbuild:optimized",
    "postpack": "mkdir -p pkg && mv adobe-helix-dispatch-${npm_package_version}.tgz pkg/adobe-helix-dispatch.tar.gz",
    "deploy": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json",
    "deploy-sequences": "wsk-builder --no-build -no-hints -l latest -l major -l minor",
    "deploy-ci": "fastly compute deploy --service-id=${ID} && wsk-builder -v --deploy --test=/_status_check/healthcheck.json --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci",
    "monkeypatch": "echo '' >> node_modules/@fastly/as-compute/assembly/index.ts && echo '// monkey patch' >> node_modules/@fastly/as-compute/assembly/index.ts && echo 'import { FastlyPendingUpstreamRequest } from \"./fastly/fastly-upstream/fastly-pending-upstream-request\";' >> node_modules/@fastly/as-compute/assembly/index.ts && echo 'export { FastlyPendingUpstreamRequest };' >> node_modules/@fastly/as-compute/assembly/index.ts"
  },
  "wsk": {
    "namespace": "helix",
    "name": "helix-services/dispatch@${version}",
    "concurrency": 40
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-dispatch.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-dispatch/issues"
  },
  "homepage": "https://github.com/adobe/helix-dispatch#readme",
  "dependencies": {
    "@adobe/helix-epsagon": "1.5.3",
    "@adobe/helix-status": "8.2.1",
    "@adobe/openwhisk-action-logger": "2.2.1",
    "@adobe/openwhisk-action-utils": "4.3.1",
    "@fastly/as-compute": "^0.1.1",
    "as-wasi": "^0.4.0",
    "assemblyscript-json": "^0.3.3",
    "ferrum": "1.7.0",
    "openwhisk": "3.21.2"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.3",
    "@adobe/helix-log": "4.5.2",
    "@adobe/openwhisk-action-builder": "2.15.0",
    "@as-pect/cli": "^4.0.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "assemblyscript": "^0.13.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codecov": "3.8.0",
    "dotenv": "8.2.0",
    "eslint": "^7.12.1",
    "eslint-plugin-header": "3.1.0",
    "eslint-plugin-import": "2.22.1",
    "jsdoc-to-markdown": "6.0.1",
    "junit-report-builder": "2.1.0",
    "lint-staged": "10.5.1",
    "mocha": "^8.2.0",
    "nock": "13.0.4",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.2.2",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
